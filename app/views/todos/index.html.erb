<table class="table table-striped table-condensed">
 <% @todos.each do |todo| %>
   <tr>
     <td><%= check_box("post", "validated") %></td>
     <td><%= todo.name %></td>
     <td><%= link_to 'Show', todo_path(todo) %></td>
     <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
     <% if Time.now.to_date <= todo.due_date %>
      <td><%= link_to 'Destroy', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?" } %></td>
     <% else %>
          <td>expired</td>
     <% end %>
   </tr>
 <% end %>
</table>

<button type="button" class="btn"><%= link_to 'New Todo', new_todo_path %></button>